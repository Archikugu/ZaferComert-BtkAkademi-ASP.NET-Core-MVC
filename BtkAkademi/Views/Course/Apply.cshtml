@model Candidate

@{
    ViewData["Title"] = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="display-6">Apply</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label>E-Mail</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>Age</label>
        <select asp-for="Age">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked />
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API" />
            <label>ASP.NET Core API</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Blazor" />
            <label>Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-success" type="submit">Apply</button>
        <a class="btn btn-warning" href="/Home">Home</a>
    </div>
</form>
