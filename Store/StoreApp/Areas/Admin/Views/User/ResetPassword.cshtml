@model ResetPasswordDto

<div class="text-center my-5">
    <div class="display-6 border-bottom">Reset Password (@Model?.UserName)</div>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="UserName" />
    <div class="form-group my-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-solid fa-key"></i>
            Update
        </button>
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fa fa-solid fa-users"></i>
            Users
        </a>
    </div>
</form>