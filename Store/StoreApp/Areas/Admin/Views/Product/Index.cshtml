@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int count = 0;
}

@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Product" asp-action="Create"><i class="fa fa-plus"></i> Create</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>ImageUrl</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img class="border border-primary" src="@item?.ImageUrl" / alt="@item?.ProductName" width="50"></td>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.ProductID"><i class="fa fa-edit"></i> Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductID"><i class="fa fa-trash"></i> Delete</a>
                            <a class="btn btn-info" target="_blank" asp-area="" asp-action="Get" asp-route-id="@item.ProductID"><i class="fa fa-search"></i> Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

